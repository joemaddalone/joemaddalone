---
import BaseLayout from "../layouts/BaseLayout.astro";
import data from "./resume.11tydata.json";
const pageTitle = "Resume of Joe Maddalone";
---

<BaseLayout includeHeader={false} pageTitle={pageTitle}>
    
    <div class="ui internally celled grid">
        <div class="row">
            <div class="four wide column">
                <b>Get to know me.</b>
            </div>
            <div class="twelve wide column">
                <h2>Experience</h2>
                <div class="ui divided items">
                    {
                        data.resume.work.map((work) => (
                            <div class="item">
                                <div class="content">
                                    <div class="header">
                                        {work.company} ({work.from} - {work.to})
                                    </div>
                                    <div class="meta i">{work.title}</div>
                                    <ul>
                                        {work.highlights.map((highlight) => (
                                            <li class="meta pt0">
                                                {highlight}
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div></BaseLayout
>
